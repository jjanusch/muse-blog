{% extends 'layouts.app' %}

{% block page_title_prefix %}{% if tag_slug %}Tag: {{ tag_slug }}{% endif %}{% endblock %}

{% block content %}
    {% if tag_slug %}
        <p>Showing posts for tag
            <a href="{{ route('page.posts/tags/show', {slug: tag_slug}) }}" class="badge badge-light">{{ tag_slug }}</a>
        </p>
    {% endif %}
    <ul class="post index">
        {% for post in posts %}
            <li>
                <h2>
                    <a href="{{ post.url }}" class="title">{{ post.title }}</a>
                </h2>
                <p class="summary">
                    {{ post.summary|slice(0, config('posts.summary_length')) }}{% if post.summary|length > config('posts.summary_length') %}...{% endif %}
                </p>
                <div class="metadata">
                    <span class="date">{{ post.published_at|date('F Y') }}</span>
                    {% for tag in post.tags %}
                        <a href="{{ tag.url }}" class="badge badge-light">{{ tag.tag }}</a>
                    {% endfor %}
                </div>
            </li>
        {% endfor %}
    </ul>

    <nav>
        <ul class="pagination justify-content-center">
            {% if pagination.previous %}
                <li class="page-item">
                    <a href="{{ pagination.previous }}" class="page-link">Previous</a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link">Previous</span>
                </li>
            {% endif %}
            {% if pagination.next %}
                <li class="page-item">
                    <a href="{{ pagination.next }}" class="page-link">Next</a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link">Next</span>
                </li>
            {% endif %}
        </ul>
    </nav>
    <p class="text-muted text-center">
        <small>
            Showing {{ posts.count() }} posts of {{ pagination.total }} total
        </small>
    </p>
{% endblock %}
