{% extends 'layouts.app' %}

{% block content %}
    <ul class="posts-index">
        {% for post in posts %}
            <li>
                <a href="{{ post.url }}" class="title">{{ post.title }}</a>
                <p class="summary">
                    {{ post.summary|slice(0, config('posts.summary_length')) }}{% if post.summary|length > config('posts.summary_length') %}...{% endif %}
                </p>
                <div class="metadata">
                    <span class="date">{{ post.published_at|date('M Y') }}</span>
                    |
                    {% for tag in post.tags %}
                        <a href="{{ tag.url }}">{{ tag.tag }}</a>{% if loop.index < post.tags|length %}, {% endif %}
                    {% endfor %}
                    |
                    <a href="{{ post.url }}" class="read-more">Read More</a>
                </div>
            </li>
        {% endfor %}
    </ul>
    <ul class="pagination">
        {% if pagination.previous %}
            <li>
                <a href="{{ pagination.previous }}">Previous</a>
            </li>
        {% else %}
            <li class="disabled">
                Previous
            </li>
        {% endif %}
        {% if pagination.next %}
            <li>
                <a href="{{ pagination.next }}">Next</a>
            </li>
        {% else %}
            <li class="disabled">
                Next
            </li>
        {% endif %}
    </ul>
{% endblock %}
