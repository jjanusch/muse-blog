{% extends 'layouts.app' %}

{% block content %}
    <h2>{{ post.title }}</h2>
    <div class="post-meta">
        <span class="date" title="{{ post.published_at|date('Y-m-d H:i:s') }}">
            {{ post.published_at|date('M d, Y') }}
        </span>
        |
        {% for tag in post.tags %}
            <a href="{{ tag.url }}">{{ tag.tag }}</a>{% if loop.index < post.tags|length %}, {% endif %}
        {% endfor %}
    </div>
    <div class="post-body">
        {{ post.body|raw }}
    </div>
{% endblock %}
